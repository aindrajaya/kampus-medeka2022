<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head"); %> 
<body>
    <%- include("partials/navbar"); %>
    <div class="container m-4">
        <!-- kita lakukan looping untuk menjalankan include untuk component article -->
        <% articles.forEach(i => { %> <% if (i.approved) { %> 
            <div class="container mb-2">
                <h1>
                    <%= i.title %> <span class="badge badge-primary"><%= i.id %> </span> 
                </h1>
                <p><%= i.body %></p>
            </div>
            <% } %> 
      <%  })  %>   
    </div> 

</body>
</html> 